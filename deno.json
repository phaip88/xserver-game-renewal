{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read xhttp.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
